{
  "name": "natours",
  "version": "1.0.0",
  "description": "Landing page for natours",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel devserver auto-build:css watch:css",
    "devserver": "live-server",
    "watch:css": "node-sass public/build/css/style.css -w",
    "concat:css": "concat -o assets/css/main.css assets/css/all-css/_animation.css assets/css/all-css/_global.css assets/css/all-css/_layouts.css assets/css/all-css/_components.css assets/css/all-css/_pages.css ",
    "compress:css": "node-sass assets/css/main.css public/build/css/style.css --output-style compressed",
    "build:css": "npm-run-all concat:css compress:css",
    "auto-build:css": "watch 'npm run build:css' assets/css/all-css"
  },
  "author": "Arsene",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "@popperjs/core": "^2.3.1",
    "bootstrap": "^4.5.0",
    "concat": "^1.0.3",
    "gulp": "^4.0.2",
    "jquery": "^3.3.1",
    "live-server": "^1.2.1",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "concat": "^1.0.3",
    "fancy-log": "^1.3.3",
    "gulp-file-include": "^2.2.2",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1"
  }
}
